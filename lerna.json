{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "noCommitHooks": true,
      "allowBranch": "master",
      "registry": "http://localhost:4873"
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/*fixture.js",
    "**/*.md"
  ]
}
